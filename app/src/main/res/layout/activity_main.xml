<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<ListView
    android:id="@+id/lePatient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
</ListView>

<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom :"/>


            <EditText
                android:id="@+id/txtnom"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:hint="" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Prenom :"/>


              <EditText
                  android:id="@+id/txtprenom"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView
                  android:id="@+id/txtgenre"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Sexe :     "/>

              <TextView
                  android:id="@+id/txtMsc"
                  android:layout_width="24dp"
                  android:layout_height="wrap_content"
                  android:text="M" />
              <CheckBox
                  android:id="@+id/ckbM"
                  android:layout_width="37dp"
                  android:layout_height="48dp" />

              <TextView
                  android:id="@+id/txtFem"
                  android:layout_width="25dp"
                  android:layout_height="wrap_content"
                  android:text="F"/>

              <CheckBox
                  android:id="@+id/ckbF"
                  android:layout_width="30dp"
                  android:layout_height="48dp" />


          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="N Civique :"/>


              <EditText
                  android:id="@+id/txtNumci"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Rue ::"/>


              <EditText
                  android:id="@+id/txtRue"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Appartement :"/>


              <EditText
                  android:id="@+id/txtApp"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Ville :"/>


              <EditText
                  android:id="@+id/txtVille"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Code Postal :"/>


              <EditText
                  android:id="@+id/txtCpost"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Telephone :"/>


              <EditText
                  android:id="@+id/txtTel"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Telephone[Travail] :"/>


              <EditText
                  android:id="@+id/txtTrav"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Cellulaire :"/>


              <EditText
                  android:id="@+id/txtCel"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Date de Naissance  A/M/J:"/>


              <EditText
                  android:id="@+id/txtNais"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="N Assurance Social [facultative] :"/>


              <EditText
                  android:id="@+id/txtNAS"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Couriel"/>


              <EditText
                  android:id="@+id/txtCour"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Numero d'assurance Maladie :"/>


              <EditText
                  android:id="@+id/txtNAM"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Expiration : "/>


              <EditText
                  android:id="@+id/txtExp"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="En cas d'urgence, Contacter :"/>


              <EditText
                  android:id="@+id/txtUrCont"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

             <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Telephone:"/>


              <EditText
                  android:id="@+id/txtTelUr"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Raison de la visite:"/>


              <EditText
                  android:id="@+id/txtRvisit"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/adresser_par"/>


              <EditText
                  android:id="@+id/txtAdrPar"
                  android:layout_width="362dp"
                  android:layout_height="wrap_content"
                  android:hint="" />

          </LinearLayout>

          <Button
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/btnSubmit"
              android:text="Submit">

          </Button>











</LinearLayout>

    </ScrollView>
    </android.widget.RelativeLayout>